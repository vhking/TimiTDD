@using Microsoft.AspNetCore.Identity
@using TimiTDD.Models

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Login" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            @if (User.IsInRole("User"))
            {
                <li>
                    <a asp-controller="Manage" asp-action="Index" asp-area="User" title="Home">Brukerinstillinger</a>
                </li>
            }
            @if (User.IsInRole("Admin"))
            {
                <li>
                    <a asp-controller="Manage" asp-action="Index" asp-area="Admin" title="Home">Brukerinstillinger</a>
                </li>
            }

            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{    
    <ul class="nav navbar-nav navbar-right">
        @* <li><a asp-area="" asp-controller="Login" asp-action="Register">Register</a></li>*@
        <li><a asp-controller="Login" asp-action="Login" asp-area="">Logg inn</a></li>
    </ul>
}
