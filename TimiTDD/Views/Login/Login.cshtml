@model TimiTDD.Models.AccountViewModels.LoginViewModel
@using System.Threading.Tasks
<h2>Tim√≠ time- og arbeidsregistreringsapp</h2>
<div class="row">
    <div>
        <div class="col-md-4">
            <h4>Logg inn med lokal konto</h4>
            <div class="panel login-panel">
                <div class="pael-body login-panel-body">
                    <section>
                        <form asp-controller="Login" asp-action="Login" method="post" class="form-horizontal login-form">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <div class="icon-addon">
                                    <input asp-for="UserName" placeholder="Epost" class="form-control" />
                                    <label for="Email" class="glyphicon glyphicon-envelope"></label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="icon-addon">
                                    <input asp-for="Password" placeholder="Passord" class="form-control" />
                                    <label for="Password" class="glyphicon glyphicon-lock"></label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group login-form-checkbox">
                                <div class="checkbox">
                                    <label asp-for="RememberMe">
                                        <input asp-for="RememberMe" />
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group login-form-submit">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-default">Logg inn</button>
                                </div>
                            </div>
                            <hr />
                        </form>
                        <p>
                            <a asp-action="ForgotPassword">Glemt passordet?</a>
                        </p>
                    </section>
                </div>
            </div>
        </div>
        <div class="col-md-8">
        </div>
    </div>
</div>
