@model IEnumerable<TimiTS.Models.WorkParticipation>


@{
    ViewBag.Title = "Workarchive";
}

<div class="container">
    <h2 align="center">Timeoversikt </h2>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">

                <table id="mytable" class="table table-bordred table-striped">
                    <tr>

                        <th>
                            Timeoversikt Ã¥r
                        </th>
                            Timer totalt
                        <th>
                            Detalj
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(model => item.DateTimeStart.Value.Year)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Hour)
                            </td>
                            <td>
                                <a asp-action="WorkOverview" asp-route-id="@item.Date">Oversikt</a> 
                            </td>


                        </tr>

                    }

                </table>

            </div>
        </div>
    </div>
</div>
