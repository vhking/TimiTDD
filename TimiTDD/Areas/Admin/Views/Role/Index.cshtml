@model IEnumerable<TimiTDD.Models.AccountViewModels.RoleListViewModel>

@{
    ViewData["Title"] = "Roller";
}


<div class="text-center">
    <a asp-action="Create" class="btn btn-default">Opprett en ny rolle</a>
</div>
<div>
    <h2>
        Roller
    </h2>
</div>
<table class="table table-striped table-bordered" id="RolleTable">
    <thead>
        <tr>
            <th>Navn</th>
            <th>Beskrivelse</th>
            <th>Handinger</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleDescription)
                </td>
                               
                <td>
                    
                    <a asp-action="Edit" asp-route-id="@item.Id">Rediger</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Slett</a>
                

                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#RolleTable').DataTable();
        });
    </script>
}